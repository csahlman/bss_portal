<h1><%= link_to "Edit Description", '/editor' + request.path, 
  id: "edit_link" %><br>
  <%= link_to "Edit the rest", edit_admin_semester_lesson_path(@semester, @lesson) %>
</h1>

<% @lesson.images.each do |image| %>
  <%= image_tag image.picture.url %>
<% end %>

<% @lesson.attachments.each do |attachment| %>
  <%= link_to attachment.document_file_name, attachment.document.url %>
<% end %>

<span id="new_lesson" data-mercury="full">
<%= raw @lesson.description %>
</span>